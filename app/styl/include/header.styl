header
  width: 100%
  height: 110px
  display: flex
  transition: .3s
  border-bottom: 1px solid $white
  &.active
    transition: .3s
    background: $red
  .container
    width: 100%
    margin: 0 auto
    display: flex
    max-width: 1920px
    align-items: center
    justify-content: space-between
    .main-logo
      width: 242px
      min-width: 242px
      height: 54px
      display: flex
      margin-left: 20px
      cursor: pointer
      img
        width: 100%
    .links-block
      width: 100%
      padding: 0 15px
      max-width: 930px
      display: flex
      justify-content: space-around
      a
        padding: 0 10px
        white-space: nowrap
        &.active
          svg
            path
              transition: .3s
              fill: $white
          color: $white
        &:hover
          color: $yellow
          transition: .3s
      .scheme
        display: flex
        cursor: pointer
        position: relative
        align-items: center
        svg
          width: 13px
          height: 17px
          margin-right: 8px
          path
            transition: .3s
        &:hover
          color: $yellow
          transition: .3s
          svg
            path
              transition: .3s
              fill: $yellow
      .how-to-get
        display: flex
        cursor: pointer
        position: relative
        align-items: center
        svg
          width: 17px
          height: 17px
          margin-right: 8px
          path
            transition: .3s
        &:hover
          color: $yellow
          transition: .3s
          svg
            path
              transition: .3s
              fill: $yellow
    .mode-and-social
      display: flex
      width: 100%
      max-width: 310px
      align-items: center
      justify-content: space-between
      p.operation-mode
        padding: 0 10px
        display: flex
        white-space: nowrap
        position: relative
        align-items: center
        justify-content: space-between
        svg
          margin-right: 8px
        &.active
          color: $white
          svg
            path
              fill: $white
      .social-links
        padding: 0 20px
        display: flex
        align-items: center
        justify-content: space-between
        .instagram
          width: 21.78px
          height: 21.78px
          svg
            path
              transition: .3s
          &.active
            svg
              path
                fill: $white
          &:hover
            color: $yellow
            transition: .3s
            svg
              path
                transition: .3s
                fill: $yellow
        .facebook
          width: 12px
          height: 23px
          margin-left: 25px
          svg
            path
              transition: .3s
          &.active
            svg
              path
                fill: $white
          &:hover
            color: $yellow
            transition: .3s
            svg
              path
                transition: .3s
                fill: $yellow
        .vk
          width: 25.5px
          height: 25.5px
          margin-left: 25px
          svg
            path
              transition: .3s
          &.active
            svg
              path
                fill: $white
          &:hover
            color: $yellow
            transition: .3s
            svg
              path
                transition: .3s
                fill: $yellow
    .search-and-burger
      display: flex
      margin-right: 60px
      align-items: center
      justify-content: space-between
      .search
        cursor: pointer
        width: 18.49px
        height: 19.15px
        margin-right: 30px
        svg
          path
            transition: .3s
        &.active
          svg
            path
              fill: $white
        &:hover
          color: $yellow
          transition: .3s
          svg
            path
              transition: .3s
              fill: $yellow
      .menu-icon
        position: absolute
        width: 21px
        height: 20px
        margin-left: 50px
        cursor: pointer
        transition: .3s
        .dot
          position: absolute
          top: 50%
          left: 50%
          width: 5px
          height: 5px
          background-color: $dark-gray
          border-radius: 16px
          -webkit-transform: translate(-50%, -50%) rotate(45deg)
          -moz-transform: translate(-50%, -50%) rotate(45deg)
          -ms-transform: translate(-50%, -50%) rotate(45deg)
          -o-transform: translate(-50%, -50%) rotate(45deg)
          transform: translate(-50%, -50%) rotate(45deg)
          transition: .3s
          &:nth-of-type(1)
            margin-top: -7.5px
            margin-left: -7.5px
            -webkit-transform: translate(-50%, -50%) rotate(45deg)
            -moz-transform: translate(-50%, -50%) rotate(45deg)
            -ms-transform: translate(-50%, -50%) rotate(45deg)
            -o-transform: translate(-50%, -50%) rotate(45deg)
            transform: translate(-50%, -50%) rotate(45deg)
          &:nth-of-type(2)
            margin-top -7.5px
            -webkit-transform: translate(-50%, -50%) rotate(-45deg)
            -moz-transform: translate(-50%, -50%) rotate(-45deg)
            -ms-transform: translate(-50%, -50%) rotate(-45deg)
            -o-transform: translate(-50%, -50%) rotate(-45deg)
            transform: translate(-50%, -50%) rotate(-45deg)
          &:nth-of-type(3)
            margin-top: -7.5px
            margin-left: 6.5px
          &:nth-of-type(4)
            margin-left: -7.5px
          &:nth-of-type(6)
            margin-left: 6.5px
          &:nth-of-type(7)
            margin-top: 6.5px
            margin-left: -7.5px
          &:nth-of-type(8)
            margin-top: 6.5px
          &:nth-of-type(9)
            margin-top: 6.5px
            margin-left: 6.5px
        &.clicked
          .dot
            background: $white
            -webkit-transition: margin 0.4s ease, width 0.4s ease 0.4s
            -moz-transition: margin 0.4s ease, width 0.4s ease 0.4s
            -o-transition: margin 0.4s ease, width 0.4s ease 0.4s
            transition: margin 0.4s ease, width 0.4s ease 0.4s
            height: 2px
            margin-left: 0
            margin-top: 0
            &:nth-of-type(1)
              height: 2px
              width: 22px
            &:nth-of-type(2)
              height: 2px
              width: 22px
              margin-top: 0
            &:nth-of-type(3)
              height: 1px
              margin-top: 0
            &:nth-of-type(4)
              height: 1px
              margin-top: 0
            &:nth-of-type(6)
              height: 1px
              margin-top: 0
            &:nth-of-type(7)
              height: 1px
              margin-top: 0
            &:nth-of-type(8)
              height: 1px
              margin-top: 0
            &:nth-of-type(9)
              height: 1px
              margin-top: 0
        &:hover
          .dot
            background: $yellow
.menu-header
  width: 100%
  z-index: 3
  height: 135px
  display: none
  transition: .3s
  background: $red
  position: absolute
  &:after
    content: ""
    background: linear-gradient(-35deg, transparent 16px, $red 0), linear-gradient(35deg, transparent 16px, $red 0)
    background-repeat: repeat-x
    background-position: left bottom
    background-size: 22px 32px
    display: block
    width: 100%
    height: 32px
    z-index: 1
    position: absolute
    bottom: -15px
    left: 0px
  &.active
    display: flex
    transition: .3s
    align-items: center
    justify-content: center
  .links-block
    width: 100%
    padding: 0 15px
    max-width: 930px
    display: flex
    justify-content: space-around
    a
      padding: 0 10px
      color: $white
      white-space: nowrap
      &.active
        svg
          path
            transition: .3s
            fill: $white
        color: $white
      &:hover
        color: $yellow
        transition: .3s
.background-menu
  width: 100%
  height: 100%
  opacity: 0.7
  z-index: 2
  display: none
  position: absolute
  background: $black
  &.active
    display: block
