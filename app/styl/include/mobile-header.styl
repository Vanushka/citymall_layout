@media screen and (max-device-width: 767px)
  header
    .container
      .mode-and-social
        display: none
      .search
        opacity: 0
      .search-and-burger
        margin-right: 0
        .close
          right: 23px
          margin-right: 0
          position: absolute
        .menu-icon
          right: 21px
          z-index: 3
          margin-left: 0
  .background-menu
    top: 0
  .menu-header
    top: 0
    width: 250px
    height: -webkit-fill-available
    &:after
      width: 1000px
      position: fixed
      transform: rotate(270deg)
      left: -248px
      bottom: unset
    p.operation-mode
      display: flex
    .social-links
      display: flex
    .search
      display: block
    .tablet-menu
      margin-top: 165px
      padding-bottom: 20px
      border-bottom: none
      align-items: end !important
      height: max-content !important
      flex-direction: column-reverse
      a
        max-width: 140px
        padding: 0 25px !important
      .block-menu
        align-items: end
        flex-direction: column
      .scheme-and-howtoget
        align-items: end
        flex-direction: column
    .center-line
      width: 80%
      z-index: 1
      height: 1px
      display: block
      position: absolute
      background: #fff
      top: 390px
    .links-block
      position: absolute
      top: 335px !important
      flex-direction: column
      a
        padding: 0 11px
        max-width: 140px
  .search-header
    width: 100%
    .block-search
      width: 89%
      align-items: end
      margin: 0 auto
      flex-direction: column
      p
        margin-top: 0
        margin-left: 0
        margin-bottom: 10px
      form
        width: 100%
        margin: 0 auto
        position: relative
        .magnifier
          right: 45px
          position: absolute
          svg
            opacity: 1
            margin-top: 8px
        input
          width: 100%
          height: 34px
          border: 2px solid #fff
        input[type="text"]
          padding-left: 20px
