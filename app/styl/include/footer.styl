footer
  width: 90%
  height: 133px
  margin: 0 auto
  margin-bottom: 87px
  position: relative
  margin-top: 112px
  .zigzag-line
    width: 99.2%
    height: 7px
    margin-top: 0
    background-image: url(../img/svg/index/zigzag-line.svg)
  .footer-content
    width: 99.2%
    display: flex
    margin-top: 55px
    align-items: center
    justify-content: space-between
    .address-phone-links-block
      width: 100%
      display: flex
      max-width: 1198px
      align-content: center
      justify-content: space-between
      a.address
        min-width: 220px
        display: flex
        cursor: pointer
        line-height: 24px
        position: relative
        align-items: center
        svg
          width: 13px
          height: 17px
          margin-top: -25px
          margin-right: 8px
          path
            transition: .3s
      a.phone
        height: 23px
        min-width: 130px
        margin-top: 19px
        margin-right: 20px
      .links-block
        width: 100%
        display: flex
        max-width: 715px
        justify-content: space-between
        a
          height: 23px
          color: $black
          margin-top: 19px
          font-family: GothamPro-Medium
          transition: .3s
          &:hover
            color: $yellow
            transition: .3s
    .social-links
      width: 100%
      display: flex
      margin-top: 15px
      max-width: 103px
      margin-left: 20px
      align-items: center
      justify-content: space-between
      .instagram
        width: 21.78px
        height: 21.78px
        svg
          path
            transition: .3s
      .facebook
        width: 12px
        height: 23px
        margin-left: 25px
        svg
          path
            transition: .3s
      .vk
        width: 25.5px
        height: 25.5px
        margin-left: 25px
        svg
          path
            transition: .3s
