.search-block-head
  width: 91%
  margin: 40px auto
  .container
    form
      display: flex
      margin-left: 25px
      .input
        .magnifier
          display: block
          position: absolute
          svg
            width: 13.66px
            margin-top: 13px
            margin-left: 19px
            position: absolute
            path
              fill: $dark-gray
        input
          width: 973px
          height: 40px
          outline: none
          transition: .3s
          background: none
          border-radius: 20px
          box-sizing: border-box
          border: 1px solid $silver
        input[type="text"]
          color: $dark-gray
          font-size: 13px
          padding-left: 40px
        ::placeholder
          transition: .3s
          opacity: 0.6
          color: $silver
      select
        display: none
      .custom-select
        width: 324px
        height: 40px
        margin-left: 35px
        padding-left: 22px
        padding-top: 1px
        font-size: 13px
        line-height: 35px
        color: $dark-gray
        position: relative
        font-family: GothamPro
        border: 2px solid $dark-gray
        box-sizing: border-box
        border-radius: 20px
        &:after
          content: ""
          top: 17px
          width: 9px
          height: 5px
          right: 20px
          position: absolute
          transition: transform .3s ease-out
          background: url(../img/svg/arrow-select.svg)
        &.active
          &:after
            transform: rotate(180deg)
            transition: transform .3s ease-out
        &.disabled
          opacity: 0.3
          pointer-events: none
      .select-items
        color: $dark-gray
        margin-left: 24px
        font-family: GothamPro
        font-style: normal
        font-weight: 300
        margin-top: 20px
        font-size: 16px
        line-height: 16px
        margin-right: 16px
        position: absolute
        z-index: 1
      .select-selected
        color $dark-gray
        font-family: GothamPro
      .select-items div
        color: $dark-gray
        font-family: GothamPro
      .select-hide
        display: none
.floors-map
  width: 91%
  height: 830px
  margin: 0 auto
  max-width: 100vw
  position: relative
  background: $back-canvas
  .container
    width: 100%
    height: 100%
    max-width: none
    overflow: hidden
    position: absolute
    .actions
      .levels
        top: 0
        left: 0
        right: 0
        margin: 65px
        display: flex
        flex-direction: column
        a
          z-index: 1
          height: 55px
          width: 270px
          display: flex
          color: $dark-gray
          margin-bottom: 25px
          background: $white
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &.active
            color: white
            background: $yellow
      .zoom
        right: 0
        bottom: 0
        margin: 65px
        display: flex
        position: absolute
        flex-direction: column
        .plus
          z-index: 1
          width: 50px
          height: 50px
          display: flex
          cursor: pointer
          background: $white
          margin-bottom: 22px
          border-radius: 30px
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &:before
            content: ""
            width: 13px
            height: 13px
            position: absolute
            background: url(../img/svg/floors-map/plus.svg)
        .minus
          z-index: 1
          width: 50px
          height: 50px
          display: flex
          cursor: pointer
          background: $white
          border-radius: 30px
          margin-bottom: 22px
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &:before
            content: ""
            width: 8px
            height: 3px
            position: absolute
            background: url(../img/svg/floors-map/minus.svg)
      .legend
        left: 0
        bottom: 0
        z-index: 1
        margin: 65px
        display: flex
        width: 271px
        height: 422px
        padding-top: 23px
        background: $white
        position: absolute
        flex-direction: column
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
        .paragraph
          display: flex
          font-size: 14px
          line-height: 26px
          color: $dark-gray
          margin-left: 25px
          margin-bottom: 8px
          align-items: center
          font-family: GothamPro
          img
            width: 22px
            height: 22px
            margin-right: 7px

    #floors
      #map_level_1
        top: 35px
        width: 100%
        height: 100%
        display: none
        overflow: hidden
        position: absolute
        &.active
          display: block
          overflow: hidden
          touch-action: none
        .canvas
          width: 100%
          height: 100%
          position: absolute
          transition: .3s linear
          svg
            display: block
            width: 100%
            path
              transition: .3s
              &:hover
                fill: $red
                transition: .3s
      #map_level_2
        top: 0
        width: 100%
        height: 100%
        display: none
        overflow: hidden
        position: absolute
        &.active
          display: block
          overflow: hidden
          touch-action: none
        .canvas
          top: 55px
          width: 100%
          height: 100%
          cursor: grab
          display: flex
          touch-action: none
          user-select: none
          position: absolute
          transition: .3s linear
          svg#map_2
            display: block
            width: 100% !important
            margin: 0 auto
            .svg-legend-hover
              polygon, rect, path, circle
                cursor: pointer
                transition: .3s
              g
                polygon, rect, path, circle
                  cursor: pointer
                  transition: .3s
              .svg-legend-element
                polygon, rect, path, circle
                  cursor: pointer
                  transition: .3s
              &:hover
                polygon, rect, path, circle
                  fill: $red
                  transition: .3s
                g
                  polygon, rect, path, circle
                    fill: $red
                    transition: .3s
                .svg-legend-element
                  polygon, rect, path, circle
                    cursor: pointer
                    fill: $white
                    transition: .3s
            .svg-hover
              polygon, rect, path
                cursor: pointer
                transition: .3s
              g
                polygon, rect, path
                  cursor: pointer
                  transition: .3s
              .svg-hover-text
                polygon, rect, path
                  cursor: pointer
                  transition: .3s
              &:hover
                polygon, rect, path
                  fill: $red
                  transition: .3s
                g
                  polygon, rect, path
                    fill: $red
                    transition: .3s
                .svg-hover-text
                  polygon, rect, path
                    cursor: pointer
                    fill: $white
                    transition: .3s
            // .svg-hover
            //   polygon
            //     cursor: pointer
            //     transition: .3s
            //   &:hover
            //     polygon, rect, path
            //       fill: $red
            //       transition: .3s
            //     g
            //       cursor: pointer
            //       fill: $white
            //       transition: .3s
            &.animate
              transition: .3s linear
    .popup-map-info
      z-index: 2
      display: none
      width: 330px
      height: 381px
      background: $white
      position: absolute
      margin: 0 auto
      left: 0
      right: 0
      svg
        left: 0
        right: 0
        margin: 0 auto
        margin-top: 40px
      .category
        font-size: 12px
        line-height: 22px
        font-family: GothamPro
        color: $pale-gray
