.search-block-head
  width: 91%
  margin: 40px auto
  form
    display: flex
    margin-left: 35px
    .magnifier
      display: block
      position: absolute
      svg
        width: 13.66px
        margin-top: 13px
        margin-left: 19px
        position: absolute
        path
          fill: $dark-gray
    input
      width: 973px
      height: 40px
      outline: none
      transition: .3s
      background: none
      border-radius: 20px
      box-sizing: border-box
      border: 1px solid $silver
    input[type="text"]
      color: $silver
      font-size: 13px
      padding-left: 40px
    ::placeholder
      transition: .3s
      opacity: 0.6
      color: $silver
.floors-map
  width: 91%
  height: 830px
  margin: 0 auto
  max-width: 100vw
  position: relative
  background: $back-canvas
  .container
    width: 100%
    height: 100%
    max-width: none
    overflow: hidden
    position: absolute
    .actions
      .levels
        top: 0
        left: 0
        right: 0
        margin: 65px
        display: flex
        flex-direction: column
        a
          z-index: 1
          height: 55px
          width: 270px
          display: flex
          color: $dark-gray
          margin-bottom: 25px
          background: $white
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &.active
            color: white
            background: $yellow
      .zoom
        right: 0
        bottom: 0
        margin: 65px
        display: flex
        position: absolute
        flex-direction: column
        .plus
          z-index: 1
          width: 50px
          height: 50px
          display: flex
          cursor: pointer
          background: $white
          margin-bottom: 22px
          border-radius: 30px
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &:before
            content: ""
            width: 13px
            height: 13px
            position: absolute
            background: url(../img/svg/floors-map/plus.svg)
        .minus
          z-index: 1
          width: 50px
          height: 50px
          display: flex
          cursor: pointer
          background: $white
          border-radius: 30px
          margin-bottom: 22px
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &:before
            content: ""
            width: 8px
            height: 3px
            position: absolute
            background: url(../img/svg/floors-map/minus.svg)
    #floors
      #map_level_1
        top: 35px
        width: 100%
        height: 100%
        display: none
        overflow: hidden
        position: absolute
        &.active
          display: block
          overflow: hidden
          touch-action: none
        .canvas
          width: 100%
          height: 100%
          position: absolute
          transition: .3s linear
          transform: translate3d(0px, 11px, 0px) rotate(0deg) scale(1) translateZ(0px)
          svg
            display: block
            width: 100%
            path
              transition: .3s
              &:hover
                fill: $red
                transition: .3s
      #map_level_2
        top: 55px
        width: 100%
        height: 100%
        display: none
        overflow: hidden
        position: absolute
        &.active
          display: block
          overflow: hidden
          touch-action: none
        .canvas
          width: 100%
          height: 100%
          position: absolute
          transform: translate3d(0px, 11px, 0px) rotate(0deg) scale(1) translateZ(0px)
          svg
            display: block
            width: 100%
            path
              transition: .3s
              &:hover
                fill: $red
                transition: .3s
