            position: absolute
            background: url(../img/svg/floors-map/plus.svg)
        .minus
          z-index: 1
          width: 50px
          height: 50px
          display: flex
          cursor: pointer
          background: $white
          border-radius: 30px
          margin-bottom: 22px
          align-items: center
          justify-content: center
          box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
          &:before
            content: ""
            width: 8px
            height: 3px
            position: absolute
            background: url(../img/svg/floors-map/minus.svg)
      .legend
        left: 0
        bottom: 0
        z-index: 1
        margin: 65px
        display: flex
        width: 271px
        height: 422px
        padding-top: 23px
        background: $white
        position: absolute
        flex-direction: column
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1)
        .paragraph
