.search-block-head
  width: 91%
  margin: 40px auto
  .container
    form
      display: flex
      margin-left: 25px
      .input
        width: 90%
        max-width: 1100px
        .magnifier
          display: block
          position: absolute
          svg
            width: 13.66px
            margin-top: 13px
            margin-left: 19px
            position: absolute
            path
              fill: $dark-gray
        input
          width: 100%
          height: 40px
          outline: none
          transition: .3s
          background: none
          border-radius: 20px
          box-sizing: border-box
          border: 1px solid $silver
        input[type="text"]
          color: $dark-gray
          font-size: 13px
          padding-left: 40px
        ::placeholder
          transition: .3s
          opacity: 0.6
          color: $silver
      select
        display: none
      .custom-select
        width: 100%
        max-width: 324px
        height: 40px
        cursor: pointer
        margin-left: 35px
        padding-left: 22px
        padding-top: 1px
        font-size: 13px
        line-height: 35px
        color: $dark-gray
        position: relative
        font-family: GothamPro
        border: 2px solid $dark-gray
        box-sizing: border-box
        border-radius: 20px
        &:after
          content: ""
          top: 17px
          width: 9px
          height: 5px
          right: 20px
          position: absolute
          transition: transform .3s ease-out
          background: url(../img/svg/arrow-select.svg)
        &.active
          border: 2px solid $white
          &:after
            z-index: 2
            transform: rotate(180deg)
            transition: transform .3s ease-out
        &.disabled
          opacity: 0.3
          pointer-events: none
      .select-items
        z-index: 1
        width: 324px
        padding-top: 5px
        max-height: 500px
        color: $dark-gray
        background: $white
        font-family: GothamPro
        font-style: normal
        font-weight: 300
        margin-left: -24px
        margin-top: -38px
        font-size: 16px
        line-height: 16px
        margin-right: 16px
        position: absolute
        font-size: 13px
        line-height: 35px
        color: $dark-gray
        position: relative
        overflow: scroll
        border-radius: 20px
        font-family: GothamPro
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.196303)
      .select-selected
        color $dark-gray
        font-family: GothamPro
      .select-items div
        cursor: pointer
        transition: .3s
        color: $dark-gray
        font-family: GothamPro
        padding-left: 24px
        &:hover
          color: $dark-gray
          transition: .3s
          background: $light-yellow
      .same-as-selected
        color: $dark-gray
        transition: .3s
        background: $light-yellow
      .select-hide
        display: none
