    height: 100%
    max-width: none
    overflow: hidden
    position: absolute
    .actions
      .levels
        top: 0
        left: 0
        right: 0
        margin: 65px
        display: flex
        flex-direction: column
        a
          z-index: 1
          height: 55px
          width: 270px
          display: flex
          transition: .3s
