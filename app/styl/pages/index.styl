.container
  width: 100%
  margin: 0 auto
  max-width: 1920px
  min-width: 1170px
  align-items: center
  #main-slider
    width: 100%
    height: 100%
    position: relative
    .slide
      width: 100%
      max-height: 443px
      img
        width: 100%
    .slick-prev
      left: 130px
      cursor: pointer
      position: absolute
      z-index: 1
    .slick-next
      right: 130px
      cursor: pointer
      position: absolute
      z-index: 1
  .poster
    width: 175px
    height: 194px
    bottom: 80px
    cursor: pointer
    margin-left: 60px
    position: relative
  .stocks
    width: 90%
    margin: 0 auto
    height: 750px
    margin-top: 110px
    position: relative
    .head-stocks
      display: flex
      align-items: center
      justify-content: space-between
      p
        font-size: 32px
        line-height: 61px
        font-family: GothamPro-Medium
      a
        display: flex
        img
          margin-left: 8px
      .zigzag-line
        width: 100%
        height: 7px
        margin-top: 48px
        position: absolute
        background-image: url(../img/svg/index/zigzag-line.svg)
    .body-stocks
      margin-top: 42px
      .stock
        &:first-child()
          width: 832px
          height: 423px
        .img
          .logo
            width: 71px
            height: 71px
        .info
          width: 260px
          height: 423px
          border: 1px solid $border-silver
          p.text
            width: 218px
            margin: 0 auto
            line-height: 24px
