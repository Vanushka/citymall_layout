.cinema
  width: 100%
  height: max-content
  position: relative
  background: $yellow
  &:before
    content: ""
    background: linear-gradient(-35deg, $yellow 16px,  transparent 0),
    linear-gradient(35deg, $yellow 16px, transparent 0)
    background-position: left top
    background-repeat: repeat-x
    background-size: 22px 32px
    display: block
    height: 32px
    width: 100%
    position: relative
    bottom: 32px
    left: 0
  &:after
    content: ""
    background: linear-gradient(-35deg, transparent 16px, $yellow 0), linear-gradient(35deg, transparent 16px, $yellow 0)
    background-repeat: repeat-x
    background-position: left bottom
    background-size: 22px 32px
    display: block
    width: 100%
    height: 32px
    position: absolute
    bottom: -15px
    left: 0px
