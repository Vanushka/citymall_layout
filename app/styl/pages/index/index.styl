.container
  width: 100%
  margin: 0 auto
  max-width: 1920px
  min-width: 1170px
  align-items: center
  #main-slider
    width: 100%
    height: 100%
    display: flex
    align-items: center
    position: relative
    .slide
      width: 100%
      max-height: 443px
      img
        width: 100%
    .slick-prev
      left: 130px
      cursor: pointer
      position: absolute
      z-index: 1
    .slick-next
      right: 130px
      cursor: pointer
      position: absolute
      z-index: 1
  .poster
    width: 175px
    height: 194px
    bottom: 80px
    cursor: pointer
    margin-left: 60px
    position: relative
  .container
    width: 100%
    margin: 0 auto
    padding: 0 35px
    max-width: 1685px
    min-width: 1170px
    align-items: center
    .stocks
      width: 100%
      margin: 0 auto
      height: 710px
      margin-top: -75px
      position: relative
      .head-stocks
        display: flex
        align-items: center
        justify-content: space-between
        p
          font-size: 32px
          line-height: 61px
          font-family: GothamPro-Medium
        a
          display: flex
          img
            margin-left: 8px
        .zigzag-line
          width: 100%
          height: 7px
          margin-top: 48px
          position: absolute
          background-image: url(../img/svg/index/zigzag-line.svg)
      .body-stocks
        margin-top: 42px
        display: flex
        position: relative
        justify-content: space-between
        a.stock
          margin: 0 12px
          max-width: 260px
          max-height: 423px
          min-width: 160px
          cursor: pointer
          border: 1px solid $border-silver
          .img
            max-width: 260px
            height: auto
            display: flex
            min-width: 160px
            position: relative
            img
              width: 100%
              height: 100%
              object-fit: cover
            .logo
              top: 15px
              right: 11px
              max-width: 71px
              max-height: 71px
              position: absolute
              border: 1px solid $border-silver
              img
                width: 100%
          .info
            max-width: 260px
            height: 164px
            position: relative
            border-left: 0
            display: table-row
            border-top: 1px solid $border-silver
            p.headline
              max-width: 90%
              margin-right: 20px
              margin-left: 24px
              font-size: 15px
              line-height: 21px
              margin-top: 25px
              font-family: GothamPro-Medium
            .date
              bottom: 2px
              position: absolute
              margin-left: 24px
              p
              line-height: 24px
          &:first-child
            max-width: 832px
            max-height: 423px
            display: flex
            border: 1px solid $border-silver
            .img
              height: auto
              max-width: 572px
              min-width: 400px
              max-height: 423px
              position: relative
              img
                width: 100%
                object-fit: cover
              .logo
                top: 15px
                right: 11px
                width: 71px
                height: 71px
                position: absolute
                border: 1px solid $border-silver
                img
                  width: 100%
                  height: 100%
            .info
              min-width: 240px
              height: 423px
              position: relative
              border-left: 1px solid $border-silver
              p.headline
                max-width: 152px
                margin-left: 24px
                font-size: 15px
                line-height: 21px
                margin-top: 27px
                font-family: GothamPro-Medium
              p.text
                max-width: 90%
                min-width: 127px
                margin-left: 24px
                margin-right: 20px
                line-height: 24px
              .date
                bottom: 2px
                position: absolute
                margin-left: 24px
                p
                  line-height: 24px
.cinema
  width: 100%
  height: 585px
  position: relative
  margin-bottom: 200px
  background: $yellow
  &:before
    content: ""
    background: linear-gradient(-35deg, $yellow 16px,  transparent 0),
    linear-gradient(35deg, $yellow 16px, transparent 0)
    background-position: left top
    background-repeat: repeat-x
    background-size: 22px 32px
    display: block
    height: 32px
    width: 100%
    position: relative
    bottom: 32px
    left: 0
  &:after
    content: ""
    background: linear-gradient(-35deg, transparent 16px, $yellow 0), linear-gradient(35deg, transparent 16px, $yellow 0)
    background-repeat: repeat-x
    background-position: left bottom
    background-size: 22px 32px
    display: block
    width: 100%
    height: 32px
    position: absolute
    bottom: -15px
    left: 0px
  .container
    width: 100%
    margin: 0 auto
    max-width: 1685px
    min-width: 1170px
    align-items: center
    .head-cinema
      display: flex
      z-index: 1
      margin-top: -25px
      align-items: center
      position: relative
      justify-content: space-between
      p
        color: $white
        font-size: 32px
        line-height: 61px
        font-family: GothamPro-Medium
      a
        color: $white
        display: flex
        cursor: pointer
        img
          margin-left: 8px
    .background-text
      left: 75px
      right: 0
      color: $white
      opacity: 0.15
      position: absolute
      text-align: center
      margin-top: -80px
      text-transform: uppercase
      font-family: GothamPro-Medium
      font-size: 141px
      line-height: 126px
      letter-spacing: -2.8px
    #cinema-slider
      margin-top: -10px
      display: flex
      align-items: center
      .cinema-prev
        left: -40px
        cursor: pointer
        position: absolute
      .cinema-next
        right: -40px
        cursor: pointer
        position: absolute
      .slick-slide
        margin-right: 25px
      .cinema-slide
        width: 261px
        display: flex !important
        min-height: 387px
        img
          width: 100%
@import '/media.styl'
